<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3CB371"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/topic"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_back"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:text="@string/back"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_sure"
        android:layout_below="@+id/rl_topic"
        android:layout_width="60dp"
        android:layout_height="30dp"
         android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="确定" 
        android:textSize="15sp"
        android:background="@drawable/selector_button_positive"/>
    
        <Button
        android:id="@+id/bt_turn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/bt_sure"
        android:layout_toRightOf="@+id/bt_sure"
        android:layout_marginLeft="50dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="反转" 
        android:textSize="15sp"
        android:background="@drawable/selector_button_positive"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_below="@+id/bt_sure">

    <com.personal.image.widget.ZoomRotateImageView
        android:id="@+id/iv_zoomratale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_default_image" />
    </RelativeLayout>

</RelativeLayout>